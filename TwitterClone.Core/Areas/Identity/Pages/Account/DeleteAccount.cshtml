@page
@model TwitterClone.Core.Areas.Identity.Pages.Account.DeleteAccountModel

@{
    ViewData["Title"] = "Delete Personal Data";
   
}

<div class="container" style="margin-top:20px;">
    <div class="alert alert-warning" role="alert" style="text-align:center;height:auto">
        
            <span class="glyphicon glyphicon-warning-sign"></span>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        
    </div>

    <div>
        <form id="delete-user" method="post" class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.RequirePassword)
            {
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }
            <button class="EdgeButton EdgeButton--danger"  type="submit">Delete data and close my account</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}