@page
@model TwitterClone.Core.Areas.Identity.Pages.Account.ProfileEditModel
@{
    ViewData["Title"] = "Edit Profile";
}


<partial name="_StatusMessage" for="StatusMessage" />

<div class="container py-3">
    <div class="row">
        <div class="mx-auto col-sm-6">
            <!-- form user info -->
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form id="profile-form" method="post" autocomplete="off">
                        <input id="id" name="id" value="Input.UserName" hidden>

                        <div asp-validation-summary="All" class="text-danger" style="margin-bottom:10px;margin-top:5px"></div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label" asp-for="Input.UserName"></label>
                            <div class="col-lg-9">
                                <input asp-for="Input.UserName" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label" asp-for="Input.FirstName"></label>
                            <div class="col-lg-9">
                                <input asp-for="Input.FirstName" class="form-control" />
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label" asp-for="Input.LastName"></label>
                            <div class="col-lg-9">
                                <input asp-for="Input.LastName" class="form-control" />
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label" asp-for="Input.Email"></label>
                            <div class="col-lg-9">
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label" asp-for="Input.BirthDay"></label>
                            <div class="col-lg-9">
                                <input asp-for="Input.BirthDay" class="form-control" />
                                <span asp-validation-for="Input.BirthDay" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Location</label>
                            <div class="col-lg-9">
                                <input asp-for="Input.Location" class="form-control" />
                                <span asp-validation-for="Input.Location" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label" asp-for="Input.Biography"></label>
                            <div class="col-lg-9">
                                <input asp-for="Input.Biography" class="form-control" />
                                <span asp-validation-for="Input.Biography" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label" asp-for="Input.AvatarUrl"></label>
                            <div class="col-lg-9">
                                <input asp-for="Input.AvatarUrl" class="form-control" />
                                <span asp-validation-for="Input.AvatarUrl" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label"></label>
                            <div class="col-lg-9">
                                <input type="reset" class="EdgeButton EdgeButton--secondary" value="Cancel">
                                <button type="submit" class="EdgeButton EdgeButton--primary">Update Profile</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /form user info -->
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $.validator.addMethod('verifyage',
            function (value, element, params) {
                var today = new Date();
                var birthDate = new Date(value);
                var age = today.getFullYear() - birthDate.getFullYear();

                if (age >= 18) {
                    return true;
                }

                return false;
            });

        $.validator.unobtrusive.adapters.addBool('verifyage');

    </script>
}
